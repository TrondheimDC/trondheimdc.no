  <div class="container">
    <header class="section__header text-center" data-animate="slide-up">
      <h2>{{ "partners.title" | t(lang) }}</h2>
      <p class="lead">{{ "partners.subtitle" | t(lang) }}</p>
    </header>

    <div class="partners__placeholder text-center" data-animate="fade">
      <p class="text-secondary">{{ "partners.coming_soon" | t(lang) }}</p>
