{% from "components/button.njk" import button %}

<section class="hero section section--hero" id="hero" aria-label="Hero">
  <div class="hero__layout">
    <div class="hero__content">
      <img src="/assets/images/logos/TDC_white.svg" alt="TDC 2026 logo" class="hero__logo" id="hero-logo">

      <p class="hero__date">{{ t.hero.date_full }}</p>
      <p class="hero__venue">{{ t.hero.venue }}</p>

      <div class="hero__actions">
        {{ button(t.hero.cta_tickets, "#tickets", "dark", "lg") }}
        {{ button(t.hero.cta_cfp, site.cfpUrl, "outline", "lg", null, true) }}
      </div>
    </div>

    <div class="hero__duck-area">
      <tdc-duck></tdc-duck>
    </div>
  </div>
</section>
