<tdc-section id="contact" variant="contact" lazy>
  <div class="container">
    <header class="section__header text-center" data-animate="slide-up">
      <h2>{{ "contact.title" | t(lang) }}</h2>
    </header>

    <div class="contact__grid bento bento--2" data-animate-stagger>
      <div class="contact__info">
        <h3 class="h4">{{ "contact.email_label" | t(lang) }}</h3>
        <a href="mailto:info@trondheimdc.no" class="contact__link">
          info@trondheimdc.no
        </a>
      </div>

      <div class="contact__social">
        <h3 class="h4">{{ "contact.follow" | t(lang) }}</h3>
        <div class="cluster">
          {% if site.social.twitter %}
            <a href="https://twitter.com/{{ site.social.twitter | replace('@', '') }}" 
               class="btn btn--ghost btn--icon" 
               target="_blank" 
               rel="noopener"
               aria-label="Twitter">
              ùïè
            </a>
          {% endif %}
          {% if site.social.linkedin %}
            <a href="https://linkedin.com/company/{{ site.social.linkedin }}" 
               class="btn btn--ghost btn--icon" 
               target="_blank" 
               rel="noopener"
               aria-label="LinkedIn">
              in
            </a>
          {% endif %}
          {% if site.social.github %}
            <a href="https://github.com/{{ site.social.github }}" 
               class="btn btn--ghost btn--icon" 
               target="_blank" 
               rel="noopener"
               aria-label="GitHub">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="contact__mascot text-center" style="margin-top: var(--tdc-space-stack-xl);">
      <tdc-duck size="md" animation="waddle" mood="happy"></tdc-duck>
    </div>
  </div>
</tdc-section>

<style>
  #contact {
    --tdc-text-link: var(--tdc-brand-mascot);
  }

  .contact__grid {
    max-width: 600px;
    margin-inline: auto;
    text-align: center;
  }

  .contact__link {
    font-size: var(--tdc-primitive-font-size-xl);
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  .contact__link:hover {
    color: var(--tdc-brand-mascot);
  }

  .contact__social .cluster {
    justify-content: center;
    margin-top: var(--tdc-space-stack-sm);
  }

  .contact__social .btn--ghost {
    color: var(--tdc-text-inverse);
    border-color: var(--tdc-text-inverse);
  }

  .contact__social .btn--ghost:hover {
    background-color: var(--tdc-text-inverse);
    color: var(--tdc-surface-section-contact);
  }
</style>
