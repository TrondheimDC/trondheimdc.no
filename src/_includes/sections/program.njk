<tdc-section>
<section class="section section--program" id="program" data-animate aria-labelledby="program-title">
  <div class="container text-center">
    <div class="section__header">
      <h2 class="section__title" id="program-title">{{ t.program.title }}</h2>
    </div>

    {% if site.sessionizeEventId %}
      {# Sessionize schedule grid embed #}
      <script type="text/javascript" src="https://sessionize.com/api/v2/{{ site.sessionizeEventId }}/view/GridSmart"></script>
    {% else %}
      <p class="lead" style="margin-inline: auto;">{{ t.program.placeholder }}</p>
    {% endif %}
  </div>
</section>
</tdc-section>
